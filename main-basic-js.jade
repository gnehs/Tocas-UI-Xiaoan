include _header.jade
//- 程式碼用模板
mixin code
    .ts.secondary.code.segment
        .ts.top.right.attached.label 原始碼
        pre
            code.javascript
                block
    br
    br
br
br
.ts.container
    .ts.relaxed.grid
        .sixteen.wide.mobile.four.wide.computer.column
            .ts.borderless.secondary.vertical.large.menu
                .ts.primary.header 開始使用
                +NAVlink('介紹')
                +NAVlink('404 找不到始春')
                +NAVlink('我是洨安教')
                +NAVlink('每日洨安')
                +NAVlink('基本洨安')
                +NAVlink('點心條')
        .sixteen.wide.mobile.column.twelve.wide.computer
            .ts.inverted.primary.message
                .header 溫馨提醒
                p 若要使用或是預覽此功能，您必須載入洨洨安 JS
            +header('介紹','一個基本的導覽')
            p 在 Tocas Xiaoan 中，一些功能同時有輸出在網頁中及輸出在 console 裡的版本，若您要輸出在 console 中，在後方加上 _con 即可
            p 我們已經在文件中加上標籤，方便尼知道該功能可以用在哪裡了❤️
            +code
                = '/*底下程式碼會輸出在網頁上*/'
                br
                = 'xiaoan.earlySpring404()'
                br
                = '/*底下程式碼會輸出在 console 裡*/'
                br
                = 'xiaoan.earlySpring404_con()'
            
            +header('404 找不到始春','輸出一個找不到始春的錯誤！網頁中會以一個訊息輸出，樣式請參閱 Tocas UI 官方文件')
                +inPage
                +inConsole
            script.
                xiaoan.earlySpring404()
                xiaoan.earlySpring404("inverted warning")
            +code
                = 'xiaoan.earlySpring404()'
                br
                = 'xiaoan.earlySpring404("inverted warning")'
            
            +header('我是洨安教','宣告你是洨安教')
                +inPage
                +inConsole
            script.
                xiaoan.religion()
            +code
                = 'xiaoan.religion()'
                br
                = 'xiaoan.religion_con()'
            
            +header('每日洨安','輸出洨安在網路上公開講過的話，尼甚至可以指定數量及限制字數。')
                +inPage
                +inConsole
            script.
                xiaoan.daily()
                xiaoan.daily("3","15")
            +code
                = '/* 預設輸出一個，且無指定字數 */'
                br
                = 'xiaoan.daily()'
                br
                = '/* 指定輸出數量為 3 個，且限制字數小於 15 */'
                br
                = '/* xiaoan.daily("輸出數量","限制字數") */'
                br
                = 'xiaoan.daily("3","15")'
            
            +header('基本洨安','輸出洨洨安，您可以指定樣式，超棒 Der。')
                +inPage
            script.
                xiaoan.basic()
                xiaoan.basic("horny love big")
            +code
                = 'xiaoan.basic()'
                br
                = '/* 樣式請參考 CSS 裡的基本章節 */'
                br
                = '/* xiaoan.basic("樣式") */'
                br
                = 'xiaoan.basic("horny love big")'

            +header('點心條','無需使用 Tocas JS 的替代方案，而且不用新增點心條的元素')
                +inPage
            button.ts.button(onclick='snackbar("你點了按鈕，真是太棒了，有機會抽獎獲得 iPhone8 喔")') 點我
            button.ts.button(onclick='snackbar("我會持續五秒喔",5)') 點我開啟持續五秒的點心條
            +code
                = '/* 底下的點心條將持續一秒(預設) */'
                br
                = 'snackbar("你點了按鈕，真是太棒了，有機會抽獎獲得 iPhone8 喔")'
                br
                = '/* 底下的點心條將持續五秒，修改數字來更改持續時間 */'
                br
                = 'snackbar("我會持續五秒喔",5)'
                
include _footer.jade